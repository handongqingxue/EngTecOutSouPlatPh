.main_v{
  width:100%;
  min-height: 100vh;
  margin: auto;
  background-color: #f7f7f7;
  /*
  background-color: red;
  */
}
.logo_v{
  width:100%;
  text-align: center;
}
.logo_v image{
  width: 100%;
}
.main_v .but_list_v{
  width: 95%;
  height: 40px;
  margin: 10px auto 0;
}
.main_v .but_list_v .but_v{
  width: 32%;
  height: 80px;
  background-color: #FFF;
  text-align: center;
}
.main_v .but_list_v .nos_but_v{
  border-right: #C8C8C8 solid 1px;
}
.main_v .but_list_v .pos_but_v{
  margin-top:-80px;
  margin-left:33%;
  border-right: #C8C8C8 solid 1px;
}
.main_v .but_list_v .cl_but_v{
  margin-top:-80px;
  margin-left:66%;
}
.main_v .but_list_v .nos_but_v .but_img,
.main_v .but_list_v .cl_but_v .but_img{
  width:80px;
  height:50px;
}
.main_v .but_list_v .pos_but_v .but_img{
  width: 56px;
  height: 50px;
}
.main_v .but_list_v .but_v .but_text{
  font-size: 12px;
}
.main_v .desc_div{
  width: 100%;
  margin-top: 80px;
  bottom: 0;
  padding-bottom: 10px;
}
.main_v .desc_div .content_div{
  width: 90%;
  line-height: 30px;
  margin: auto;
  font-size: 13px;
  /*  
  background-color: red;
  */
}
.main_v .desc_div .content_div .paragraphs_v{
  text-indent:2em;
}